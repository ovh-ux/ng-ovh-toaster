{
  "name": "@ovh-ux/ng-ovh-toaster",
  "version": "1.0.3",
  "description": "Show a hot toast for user",
  "keywords": [
    "angularjs",
    "ovh",
    "ovhcloud",
    "toast"
  ],
  "repository": "ovh-ux/ng-ovh-toaster",
  "license": "BSD-3-Clause",
  "author": "OVH SAS",
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/umd/ng-ovh-toaster.js",
  "scripts": {
    "build": "rollup -c --environment BUILD:production",
    "dev": "rollup -cw --environment BUILD:development",
    "lint": "run-p lint:css lint:js lint:md",
    "lint:css": "stylelint \"src/**/*.css\" --fix",
    "lint:js": "eslint --quiet --fix --format=pretty src",
    "lint:md": "eslint --quiet --fix --format=pretty --ext .md .",
    "prepare": "yarn run build",
    "test": "yarn run lint",
    "version": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@ovh-ux/component-rollup-config": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-markdown": "^1.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^12.0.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "peerDependencies": {
    "angular": "~1.6",
    "angular-sanitize": "~1.6",
    "messenger": "HubSpot/messenger#~1.4.1"
  },
  "resolutions": {
    "set-value": "^2.0.1"
  }
}
